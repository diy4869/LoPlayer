{
    "include": [
      "src/**/*",
    ],
    "compilerOptions": {
      "paths": {
        "@*": ["./src/*"],
      },
      "strict": true,
      "baseUrl": ".",
      "module": "esnext",
      "target": "es5",
      "declaration": true,
      "lib": ["dom", "esnext"],
      "strictNullChecks": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "moduleResolution": "node"
    },
    "exclude": ["node_modules"]
  }
  